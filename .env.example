# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Edge Server Configuration
EDGE_SERVER_URL=http://localhost:8080
EDGE_SERVER_PORT=8080
DATA_ACQUISITION_INTERVAL=5000  # milliseconds
HISTORIAN_BATCH_SIZE=100
HISTORIAN_FLUSH_INTERVAL=10000  # milliseconds

# Protocol Configuration
MODBUS_ENABLED=true
MODBUS_HOST=localhost
MODBUS_PORT=502
OPCUA_ENABLED=true
OPCUA_ENDPOINT=opc.tcp://localhost:4840

# Simulator Configuration (for development)
SIMULATOR_ENABLED=true
SIMULATOR_VENDOR_COUNT=5
SIMULATOR_FLOW_MIN=10  # L/s
SIMULATOR_FLOW_MAX=100  # L/s
SIMULATOR_PRESSURE_MIN=2  # bar
SIMULATOR_PRESSURE_MAX=8  # bar

# Alarm Configuration
ALARM_CHECK_INTERVAL=5000  # milliseconds
ALARM_FLOW_HIGH_THRESHOLD=90  # L/s
ALARM_FLOW_LOW_THRESHOLD=5  # L/s
ALARM_PRESSURE_HIGH_THRESHOLD=10  # bar
ALARM_PRESSURE_LOW_THRESHOLD=1  # bar

# Email Configuration (for reports and alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@scada.work

# Firebase Cloud Messaging (for mobile push notifications)
FCM_SERVER_KEY=your-fcm-server-key-here

# Twilio Configuration (optional, for SMS alerts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Report Generation
REPORT_SCHEDULE_DAILY=0 6 * * *  # 6 AM daily
REPORT_SCHEDULE_WEEKLY=0 6 * * 1  # 6 AM Monday
REPORT_SCHEDULE_MONTHLY=0 6 1 * *  # 6 AM 1st of month
REPORT_STORAGE_PATH=/reports

# Web Application
NEXT_PUBLIC_SUPABASE_URL=${SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
NEXT_PUBLIC_EDGE_SERVER_URL=${EDGE_SERVER_URL}

# Admin Configuration
ADMIN_EMAILS=admin@scada.work,manager@scada.work

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=your-jwt-secret-here
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Vercel Deployment (automatically set by Vercel)
# VERCEL=1
# VERCEL_URL=your-app.vercel.app
# VERCEL_ENV=production

# TimescaleDB Configuration
TIMESCALEDB_CHUNK_TIME_INTERVAL=1 day
TIMESCALEDB_RETENTION_PERIOD=90 days
TIMESCALEDB_COMPRESSION_AFTER=7 days

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups
